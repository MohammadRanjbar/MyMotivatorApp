<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.mymotivator.ui.mainFragment.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment" >
        <action
            android:id="@+id/action_mainFragment_to_aboutFragment"
            app:destination="@id/aboutFragment"
            app:enterAnim="@anim/fragment_nav_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.mymotivator.ui.aboutFragment.AboutFragment"
        android:label="about_fragment_layout"
        tools:layout="@layout/about_fragment_layout" />
</navigation>