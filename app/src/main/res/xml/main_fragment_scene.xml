<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnClick motion:targetId="@+id/setting"
            motion:clickAction="transitionToEnd|jumpToEnd"
            />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/setting_panel"
            android:elevation="9dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="invisible"
            motion:layout_constraintVertical_bias="0.97"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/font_recycler"
            android:elevation="9dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="invisible"
            motion:layout_constraintBottom_toTopOf="@id/setting_panel"
            motion:layout_constraintVertical_bias="1.0"
            android:layout_marginEnd="8dp"
            motion:layout_constraintTop_toBottomOf="@id/upload_img"
            android:layout_marginStart="8dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:visibilityMode="ignore" />

        <Constraint
            android:id="@+id/color_recycler"
            android:elevation="9dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="invisible"
            motion:layout_constraintBottom_toTopOf="@id/setting_panel"
            motion:layout_constraintVertical_bias="1.0"
            android:layout_marginEnd="8dp"
            motion:layout_constraintTop_toBottomOf="@id/upload_img"
            android:layout_marginStart="8dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:visibilityMode="ignore" />

        <Constraint
            android:id="@+id/size_panel"
            android:elevation="9dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_marginBottom="5dp"
            motion:layout_constraintBottom_toTopOf="@id/setting_panel"
            motion:layout_constraintVertical_bias="1.0"
            android:layout_marginEnd="8dp"
            motion:layout_constraintTop_toBottomOf="@id/upload_img"
            android:layout_marginStart="8dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/decrease_size_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/increase_size_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/size_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/setting_rec"
            motion:layout_constraintEnd_toEndOf="@id/setting_panel"
            android:layout_width="0dp"
            android:layout_height="70dp"
            motion:layout_constraintBottom_toBottomOf="@id/setting_panel"
            android:visibility="invisible"
            android:layout_marginStart="60dp"
            motion:layout_constraintTop_toTopOf="@id/setting_panel"
            motion:layout_constraintStart_toStartOf="@id/setting_panel" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/font_recycler"
            android:elevation="9dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="invisible"
            motion:layout_constraintBottom_toTopOf="@id/setting_panel"
            motion:layout_constraintVertical_bias="1.0"
            android:layout_marginEnd="8dp"
            motion:layout_constraintTop_toBottomOf="@id/upload_img"
            android:layout_marginStart="8dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:visibilityMode="ignore" />

        <Constraint
            android:id="@+id/color_recycler"
            android:elevation="9dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="invisible"
            motion:layout_constraintBottom_toTopOf="@id/setting_panel"
            motion:layout_constraintVertical_bias="1.0"
            android:layout_marginEnd="8dp"
            motion:layout_constraintTop_toBottomOf="@id/upload_img"
            android:layout_marginStart="8dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:visibilityMode="ignore" />

        <Constraint
            android:id="@+id/size_panel"
            android:elevation="9dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_marginBottom="5dp"
            motion:layout_constraintBottom_toTopOf="@id/setting_panel"
            motion:layout_constraintVertical_bias="1.0"
            android:layout_marginEnd="8dp"
            motion:layout_constraintTop_toBottomOf="@id/upload_img"
            android:layout_marginStart="8dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/setting_panel"
            android:elevation="9dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            motion:layout_constraintVertical_bias="0.97"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/setting_rec"
            motion:layout_constraintEnd_toEndOf="@id/setting_panel"
            android:layout_width="0dp"
            android:layout_height="70dp"
            motion:layout_constraintBottom_toBottomOf="@id/setting_panel"
            android:visibility="visible"
            android:layout_marginStart="60dp"
            motion:layout_constraintTop_toTopOf="@id/setting_panel"
            motion:layout_constraintStart_toStartOf="@id/setting_panel" />
        <Constraint
            android:id="@+id/flow"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="1dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/save"
            android:elevation="8dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/preview"
            android:elevation="8dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            motion:layout_editor_absoluteY="50dp"
            motion:layout_editor_absoluteX="24dp"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/referesh"
            android:elevation="8dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            motion:layout_editor_absoluteY="118dp"
            motion:layout_editor_absoluteX="54dp"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/setting"
            android:elevation="8dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            motion:layout_editor_absoluteX="90dp"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/decrease_size_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/increase_size_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/size_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:visibilityMode="ignore" />
    </ConstraintSet>
</MotionScene>